{
    "manifest_version": 3,
    "name": "ChatGPT Capture",
    "version": "1.0",
    "description": "A browser extension that captures ChatGPT conversations and saves them as editable Word documents.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": ["contextMenus", "clipboardRead", "downloads", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_title": "ChatGPT Capture",
      "default_popup": "popup.html"
    }
  }
  